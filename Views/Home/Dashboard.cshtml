    th {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: center;
        height: 45px;
    }

    td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: center;
        height: 275px;
    }

    th {
        background-color: #f2f2f2;
    }

